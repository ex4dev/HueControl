<Window x:Class="HueControlSettings.ui.BridgeKeyGenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:HueControlSettings.ui"
        mc:Ignorable="d"
        Title="Hue bridge setup" Height="450" Width="800"
        ResizeMode="CanMinimize">
    <Border Padding="10,0,10,0">
        <StackPanel Orientation="Vertical">
            <TextBlock TextAlignment="Left" FontSize="48">Bridge setup</TextBlock>
            <TextBlock Name="BridgeNameLabel" />
            <Separator Margin="0,5,0,20" />
            <TextBlock FontSize="15" TextWrapping="WrapWithOverflow" Name="Instructions">Press the button on the bridge. We'll let you know when it goes through.</TextBlock>
        </StackPanel>
    </Border>
</Window>